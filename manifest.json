{
  "manifest_version": 3,
  "name": "YouTube Watched Video Hider",
  "version": "1.0.0",
  "description": "Hide watched videos from YouTube lists to focus on unwatched content. No auto-skip, just clean video lists.",
  "author": "YouTube Watched Video Hider Contributors",
  "homepage_url": "https://github.com/sasazame/youtube-watched-video-hider",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}